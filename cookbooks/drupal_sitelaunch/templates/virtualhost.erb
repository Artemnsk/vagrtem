<VirtualHost *:80>
	ServerName <%= @server_name %>
	DocumentRoot <%= @project_dir_absolute %>

	<Directory "<%= @sites_dir %>">
		AllowOverride All
		Require all granted
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/error-<%= @id %>.log
	CustomLog ${APACHE_LOG_DIR}/access-<%= @id %>.log combined
</VirtualHost>

<% if @ssl == "1" %>
	<IfModule mod_ssl.c>
		<VirtualHost *:443>
			ServerName <%= @server_name %>
			DocumentRoot <%= @project_dir_absolute %>

			<Directory "<%= @sites_dir %>">
			AllowOverride All
			Require all granted
			</Directory>

			ErrorLog ${APACHE_LOG_DIR}/error-<%= @id %>.log
			CustomLog ${APACHE_LOG_DIR}/access-<%= @id %>.log combined

			SSLEngine on
			SSLCertificateFile <%= @ssl_cert %>
			SSLCertificateKeyFile <%= @ssl_key %>
		</VirtualHost>
	</IfModule>
<% end %>