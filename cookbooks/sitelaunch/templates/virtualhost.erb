<VirtualHost *:80>
	ServerName <%= @server_name %>
	DocumentRoot <%= @project_dir_absolute %>

	<Directory "<%= @sites_dir %>">
		AllowOverride All
		Allow from all
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/error-<%= @id %>.log
	CustomLog ${APACHE_LOG_DIR}/access-<%= @id %>.log combined
</VirtualHost>
